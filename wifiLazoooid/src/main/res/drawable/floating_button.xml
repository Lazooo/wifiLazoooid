<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="2dp" android:bottom="0dp" android:left="0dp" android:right="0dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient android:gradientRadius="90" android:type="radial"
                android:startColor="#000" android:centerColor="#CC000000" />
        </shape>
    </item>

    <item android:id="@+id/floating_button_back_shape" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/wblued"/>

        </shape>

    </item>

    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient android:angle="270"
                android:startColor="#66FFFFFF" android:endColor="#55555555" />
        </shape>
    </item>

    <item android:top="3dp" android:bottom="3dp" android:left="2dp" android:right="2dp" android:id="@+id/floating_button_front_shape">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/wblued"/>

        </shape>

    </item>

    <item android:top="3dp" android:bottom="3dp" android:left="2dp" android:right="2dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient android:angle="270"
                android:startColor="#22FFFFFF" android:endColor="#22555555" />
        </shape>
    </item>




</layer-list>